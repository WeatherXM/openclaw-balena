{ // OpenClaw config (JSON5). This file is a *template* rendered at runtime via envsubst.
  gateway: {
    mode: "local",
    port: 18789,
    auth: { token: "${OPENCLAW_GATEWAY_TOKEN}" },
    // Control UI security:
    // Browsers require HTTPS (or localhost) for WebCrypto/device identity.
    // Set to true to allow token-only auth over plain HTTP (LAN).
    controlUi: {
      allowInsecureAuth: ${OPENCLAW_CONTROLUI_ALLOW_INSECURE_AUTH}
    }
  },

  agents: {
    defaults: {
      workspace: "/data/openclaw/workspace",
      model: { primary: "local/${LOCAL_LLM_MODEL_ID}" },
      models: {
        "local/${LOCAL_LLM_MODEL_ID}": { alias: "Local GGUF (llama.cpp)" },
      },
    },
  },

  models: {
    mode: "merge",
    providers: {
      local: {
        baseUrl: "${LOCAL_LLM_BASE_URL}",
        apiKey: "none",
        api: "openai-completions",
        models: [{ id: "${LOCAL_LLM_MODEL_ID}", name: "Local LLM" }],
      },
    },
  },
}

