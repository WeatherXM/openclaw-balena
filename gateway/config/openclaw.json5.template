{ // OpenClaw config (JSON5). This file is a *template* rendered at runtime via envsubst.
  gateway: {
    mode: "local",
    port: 80,
    auth: { token: "${OPENCLAW_GATEWAY_TOKEN}" },
    // Control UI security:
    // Browsers require HTTPS (or localhost) for WebCrypto/device identity.
    // Set to true to allow token-only auth over plain HTTP (LAN).
    controlUi: {
      allowInsecureAuth: ${OPENCLAW_CONTROLUI_ALLOW_INSECURE_AUTH}
    }
  },

  // Model configuration uses environment variables set in balenaCloud
  // Set your API key and model reference via Device Variables:
  //   - OPENAI_API_KEY, ANTHROPIC_API_KEY, or OPENROUTER_API_KEY
  //   - DEFAULT_MODEL_REF (e.g., "openai/gpt-4o-mini", "anthropic/claude-sonnet-4-20250514")
  //
  // OpenClaw will automatically detect and use the configured provider.
}
